<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_favorite_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_corner_all_5dp"
    android:layout_margin="@dimen/margin_5dp">

    <ImageView
        android:id="@+id/image_favorite_item"
        android:layout_width="@dimen/image_character_width"
        android:layout_height="@dimen/image_character_height"
        android:src="@drawable/character_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitXY"
        android:layout_marginStart="@dimen/margin_5dp"
        android:layout_marginTop="@dimen/margin_5dp"
        android:layout_marginBottom="@dimen/margin_5dp"/>

    <TextView
        android:id="@+id/text_favorite_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/comfortaa_bold"
        android:maxWidth="@dimen/max_width_text"
        android:maxLines="1"
        android:text="@string/temp_character_name"
        android:textAllCaps="true"
        android:textSize="@dimen/textSize_16sp"
        app:layout_constraintStart_toEndOf="@+id/image_favorite_item"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>