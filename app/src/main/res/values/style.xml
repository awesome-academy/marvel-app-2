<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="NavigationDrawerFontStyle" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="android:fontFamily">@font/comfortaa_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="ChipButtonStyle" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="backgroundTint">@color/PrimaryColor</item>
        <item name="fontFamily">@font/comfortaa_light</item>
        <item name="minWidth">200dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_20sp</item>
    </style>
</resources>
